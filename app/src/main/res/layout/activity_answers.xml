<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.studyjams.s2.sj0116.charactercolortest.Answers">


        <TextView
            android:id="@+id/textAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="您的结果："
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/yellow"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@color/yellow"
                android:gravity="center"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/red"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_toRightOf="@id/yellow"
                android:background="@color/red"
                android:gravity="center"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/green"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@id/yellow"
                android:background="@color/aqua"
                android:gravity="center"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/blue"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@id/red"
                android:layout_toRightOf="@id/green"
                android:background="@color/lightBlue"
                android:gravity="center"
                android:textSize="40dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="结果分析："
            android:textSize="30dp" />

        <TextView
            android:id="@+id/analysisAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/image4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="赶快点击右上角把结果分享给小伙伴吧！"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/shape_radius"
            android:onClick="allAns"
            android:text="所有结果分析"
            android:textSize="20sp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/shape_radius"
            android:onClick="retMain"
            android:text="返回主界面"
            android:textSize="20sp" />


    </LinearLayout>
</ScrollView>
